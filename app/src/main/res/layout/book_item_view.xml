<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:id="@+id/bookRecyclerItem_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="#ebe689"
        android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/book"
                android:id="@+id/bookImg_id" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="TextView"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookName_id"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="TextView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookPrice_id"
                    android:layout_weight="1"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bookIntro_id"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shopping_car1"
                android:id="@+id/buyBook_id"
                android:layout_gravity="right"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp" />

    </LinearLayout>


</LinearLayout>